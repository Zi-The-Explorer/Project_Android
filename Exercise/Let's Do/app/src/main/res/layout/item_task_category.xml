<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="145dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_list_category_task"
    app:cardCornerRadius="15dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/ll_list_task_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="1dp"
        android:clickable="true"
        android:background="@color/soft_blue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hari | 23-01-2021"
            android:padding="5dp"
            android:textSize="10sp"
            android:visibility="gone"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/white"
            android:layout_gravity="start"/>

        <ImageView
            android:id="@+id/iv_item_list_task_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_minecraft"/>

        <TextView
            android:id="@+id/tv_item_list_task_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat malam semua yang dirindukan"
            android:fontFamily="@font/rubik_light"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>